@model GestionColegioJose1.Models.Alumno

<h2>Detalles del Alumno</h2>

<dl class="row">
    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Nombre</dd>

    <dt class="col-sm-2">Apellido</dt>
    <dd class="col-sm-10">@Model.Apellido</dd>

    <dt class="col-sm-2">Grado</dt>
    <dd class="col-sm-10">@Model.Grado</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.AlumnoId" class="btn btn-primary">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Volver</a>
