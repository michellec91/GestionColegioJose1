@model IEnumerable<GestionColegioJose1.Controllers.PromedioVM>

@{
    ViewData["Title"] = "Promedios por Alumno";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Colegio San José</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #dbe7f9;
            font-family: 'Segoe UI', Tahoma, sans-serif;
        }

        h2 {
            color: #4d73c9;
            text-align: center;
            margin-top: 40px;
            font-weight: 600;
        }

        .card {
            background: #fff;
            border-radius: 15px;
            box-shadow: 0 4px 12px rgba(0,0,0,.1);
            padding: 25px;
            margin-top: 30px;
        }

        table {
            border-radius: 10px;
            overflow: hidden;
        }

        th {
            background-color: #4d73c9;
            color: #fff;
            text-align: center;
        }

        td {
            text-align: center;
            vertical-align: middle;
        }

        .btn-back {
            background-color: #4d73c9;
            color: #fff;
            border-radius: 50px;
            padding: 10px 20px;
            text-decoration: none;
            display: inline-block;
            transition: all .3s ease;
        }

            .btn-back:hover {
                background-color: #375ba7;
                transform: translateY(-3px);
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Promedios por Alumno</h2>

        <div class="card">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Alumno</th>
                        <th>Promedio</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Alumno</td>
                            <td>@item.Promedio.ToString("0.00")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="text-center mt-4 mb-4">
            <a asp-controller="Home" asp-action="Index" class="btn-back">Volver al menú</a>
        </div>
    </div>
</body>
</html>
