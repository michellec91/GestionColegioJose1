@model GestionColegioJose1.Models.Materia

@{
    ViewData["Title"] = "Editar Materia";
}

<h2>Editar Materia</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="MateriaId" />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="NombreMateria" class="form-label"></label>
        <input asp-for="NombreMateria" class="form-control" />
        <span asp-validation-for="NombreMateria" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Docente" class="form-label"></label>
        <input asp-for="Docente" class="form-control" />
        <span asp-validation-for="Docente" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-warning">Actualizar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
