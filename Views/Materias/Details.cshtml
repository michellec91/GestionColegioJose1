@model GestionColegioJose1.Models.Materia

@{
    ViewData["Title"] = "Detalles de la Materia";
}

<h2>Detalles de la Materia</h2>

<dl class="row">
    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.NombreMateria</dd>

    <dt class="col-sm-2">Docente</dt>
    <dd class="col-sm-10">@Model.Docente</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.MateriaId" class="btn btn-primary">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Volver</a>
